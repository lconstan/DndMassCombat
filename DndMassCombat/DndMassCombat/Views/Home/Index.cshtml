@model DndMassCombat.Models.Simulation.SimulationViewModel
@{
    ViewData["Title"] = "D&D - Group combat";
}
<div class="container">
    <h1 class="text-center">D&D - Group combat</h1>
    <br/>
</div>

@using (Html.BeginForm("Simulate", "Home"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="container">
        <div class="row">
            <div class="container col-md-6">
                <div class="container">
                    <div class="row">
                        <div class="col form-group">
                            <h3>1st group - unit description</h3>
                        </div>
                    </div>
                </div>

                @await Html.PartialAsync("Simulation/UnitDescriptionViewModel", Model.UnitDescription1)

                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <input type="submit" class="btn btn-primary text-center" value="Attack 2nd group"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container col-md-6">
                <div class="container">
                    <div class="row">
                        <div class="col form-group">
                            <h3>2nd group - unit description</h3>
                        </div>
                    </div>
                </div>

                @await Html.PartialAsync("Simulation/UnitDescriptionViewModel", Model.UnitDescription2)

                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <input type="submit" class="btn btn-primary text-center" value="Attack 1st group"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="container col-md-6">
                <div class="container">
                    <div class="row">
                        <div class="col form-group">
                            <h3>1st group - army</h3>                    
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("Simulation/GroupViewModel", Model.Group1)
            </div>
            
            <div class="container col-md-6">
                <div class="container">
                    <div class="row">
                        <div class="col form-group">
                            <h3>2nd group - army</h3>                    
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("Simulation/GroupViewModel", Model.Group2)
            </div>
        </div>
    </div>
}
@model DndMassCombat.Models.ViewModels.GroupViewModel

<div class="container">
    <div class="row">
        <div class="col form-group">
            <div class="row">
                <span asp-validation-for="HitPoint" class="text-danger col-sm-8"></span>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.HitPoint, new {@class = "col-sm-4"})
                @Html.EditorFor(model => model.HitPoint, new {@class = "form-control"})
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col form-group">
            <div class="row">
                <span asp-validation-for="UnitCount" class="text-danger col-sm-8"></span>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.UnitCount, new {@class = "col-sm-4"})
                @Html.EditorFor(model => model.UnitCount, new {@class = "form-control"})
            </div>
        </div>
    </div>
</div>